server {
    listen                  443 ssl http2;
    listen                  [::]:443 ssl http2;
    server_name             tgorderapp.ru;
    # SSL
    ssl_certificate         /etc/letsencrypt/live/tgorderapp.ru/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/tgorderapp.ru/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/tgorderapp.ru/chain.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # reverse proxy
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    location /api/ {
        proxy_pass http://localhost:3333/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    location /bot/ {
        proxy_pass http://localhost:9090/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

}

# subdomains redirect
server {
    listen                  443 ssl http2;
    listen                  [::]:443 ssl http2;
    server_name             *.tgorderapp.ru;
    # SSL
    ssl_certificate         /etc/letsencrypt/live/tgorderapp.ru/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/tgorderapp.ru/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/tgorderapp.ru/chain.pem;
    return                  301 https://tgorderapp.ru$request_uri;
}

# HTTP redirect
server {
    listen      80;
    listen      [::]:80;
    server_name .tgorderapp.ru;

    location / {
        return 301 https://tgorderapp.ru$request_uri;
    }
}

